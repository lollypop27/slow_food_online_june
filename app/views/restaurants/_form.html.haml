= form_for(@restaurant) do |f|
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :zip_code
    = f.text_field :zip_code
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :delivery_radius
    = f.select(:delivery_radius, options_for_select([['5km', '5km'], ['10km', '10km'],['20km', '20km'],['30km', '30km']]), include_blank: 'Select radius')
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :email_address
    = f.text_field :email_address
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :cuisine, 'Select your cuisine'
    = f.select(:cuisine, options_for_select([['Italian', 'Italian'],['Greek', 'Greek'],['Chinese', 'Chinese'],['Sushi', 'Sushi']]), include_blank: 'Select cuisine')
  .actions#submit.button.expanded
    = f.submit 'Save'
